<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bayangan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Warna bayangan (hitam transparan) -->
            <corners android:radius="12dp" /> <!-- Sudut membulat -->
        </shape>
    </item>

    <!-- Latar Belakang Tombol -->
    <item android:top="4dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna latar tombol -->
            <corners android:radius="12dp" /> <!-- Sudut membulat -->
        </shape>
    </item>
</layer-list>
