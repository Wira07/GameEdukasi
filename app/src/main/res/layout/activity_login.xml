<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="20dp"

    tools:context=".login_register.LoginActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/zino_app"
        android:layout_marginTop="75dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_margin="15dp"
        android:layout_alignParentStart="true"
        android:text="Login"
        android:textColor="@color/black"
        android:layout_below="@+id/image"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"
        android:layout_margin="15dp"
        android:text="Silahkan Daftar Terlebih Dahulu"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <!-- Email Input -->
    <RelativeLayout
        android:id="@+id/emailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:layout_marginTop="30dp"
        android:layout_margin="15dp"
        android:background="@drawable/bg_input_circle"> <!-- Pastikan ini adalah background tanpa garis hitam -->

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_email"
            android:contentDescription="Email Icon" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/emailIcon"
            android:layout_marginStart="8dp"
            android:hint="Email"
            android:layout_centerVertical="true"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:background="@null"/> <!-- Tambahkan ini untuk menghilangkan border -->
    </RelativeLayout>

    <!-- Password Input -->
    <RelativeLayout
        android:id="@+id/passwordContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailContainer"
        android:layout_marginTop="20dp"
        android:layout_margin="15dp"
        android:background="@drawable/bg_input_circle"
        android:padding="12dp">

        <ImageView
            android:id="@+id/passwordIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_password"
            android:contentDescription="Password Icon" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/passwordIcon"
            android:layout_marginStart="8dp"
            android:hint="Password"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@null"/> <!-- Tambahkan ini untuk menghilangkan border -->
    </RelativeLayout>

    <!-- Forgot Password -->
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/passwordContainer"
        android:layout_marginTop="8dp"
        android:layout_margin="15dp"
        android:text="Forgot Password"
        android:textColor="@color/orange"
        android:textSize="14sp" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotPassword"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orange"
        android:text="LOGIN"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- Signup Link -->
    <TextView
        android:id="@+id/signupLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_marginBottom="20dp"
        android:text="Donâ€™t have an account? Sign up"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>
